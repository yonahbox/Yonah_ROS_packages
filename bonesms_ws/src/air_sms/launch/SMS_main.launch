<!-- launch file for Yonah main SMS Telemetry Node on Bone-->

<launch>

    <arg name="GCS_no" default="+6512345678" /> <!-- please fill in the ground router's number-->
    <arg name="whitelist" default="$(find air_sms)/src/whitelist.txt"> <!-- phone numbers authorized to send commands to aircraft-->

    <node pkg="air_sms" type="SMS_tx.py" name="SMS_tx"
    respawn="true", respawn_delay="3">
        <param name="GCS_no" value="$(arg GCS_no)" />
        <param name="whitelist" value="$(arg whitelist)" />
    </node>

</launch>